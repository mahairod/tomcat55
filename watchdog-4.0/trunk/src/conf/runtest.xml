<project name="Watchdog Test Runs" default="main">

   <!-- JSP - JSP Syntax Tests -->
   <target name="jsp">
     <ant antfile="${watchdog.home}/conf/jsp-gtest.xml"
           target="jsp-test"/>
   </target>

   <!-- JSP - XML Syntax Tests -->
   <!-- No test executions defined yet -->
   <target name="jsp-xml"/>

   <!-- JSP - All JSP Tests -->
   <target name="jsp-all" depends="jsp,jsp-xml"/>

   <!-- SERVLET - All Servlet Tests -->
   <target name="servlet">
     <ant antfile="${watchdog.home}/conf/servlet-gtest.xml"
           target="gtestservlet-test"/>
   </target>

   <!-- ALL TESTS -->
   <target name="all" depends="jsp-all,servlet"/>

   <!-- Default Target == ALL TESTS -->
   <target name="main" depends="all"/>

</project>
