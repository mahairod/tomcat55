#!/bin/ksh

echo PACKAGE:

export TYEAR=`date +%Y`
export TMONTH=`date +%m`
export TDAY=`date +%d`
export TDSTRING=$TYEAR-$TMONTH-$TDAY

cd ws/dist/tomcat

tar cf ../../../result/tomcat-$TDSTRING.tar *
cd ../../..
cd result
compress -f tomcat-$TDSTRING.tar
cp tomcat-$TDSTRING.tar.Z tomcat-$TDSTRING.log /export/home/ftp/pub
