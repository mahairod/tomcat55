LOCAL_TGT_DIR = @TGT_DIR@/apache-1.3
LOCAL_SRC_DIR = @SRC_DIR@/apache-1.3
include @TGT_DIR@/Makedefs

SOURCE = mod_webapp.c
OBJECT = mod_webapp.o

.PHONY: build clean

build: $(MODFILE)

clean:
	rm -f $(MODFILE)
	rm -f $(OBJECT)
	@if test -h $(SOURCE) ; then \
	  echo rm -f $(SOURCE) ; \
	  rm -f $(SOURCE) ; \
	fi

$(SOURCE): $(LOCAL_SRC_DIR)/$(SOURCE)
	ln -s $< $@
	  
$(MODFILE): $(SOURCE)
	$(APXS) -c -o $@ \
	  $(INCLUDES) $(LOCAL_INCLUDES) \
	  -Wc,"$(CPPFLAGS) $(CFLAGS)" \
	  -Wl,"$(LDFLAGS) $(LIBS)" \
	  -L$(LIB_DIR) -l$(APR_LIB) \
	  $(OBJ_DIR)/*.o $<

