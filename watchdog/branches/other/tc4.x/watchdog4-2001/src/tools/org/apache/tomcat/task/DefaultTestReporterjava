import java.io.*;

public class DefaultTestReporter 
{

        
	String resultFileName="watchdogresults.txt";

        String contentFormat = "xml";

	PrintWriter out = new PrintWriter(System.out );

        public void setContentFormat( String format )
	{
		if (( !contentFormat.equals("xml") ) && ( !contentFormat.equals("plain") ))
		{
			System.out.println("Un-Supported Content Format. Defaulting to xml");
			contentFormat = "xml";
		}
		else
		{
			contentFormat= format;
		 }
	 }

	public DefaultTestReporter(  )
	{

	}

	public  DefaultTestReporter( String fileName )
	{
	    	try 
	    	{
			resultFileName = fileName;
			FileOutputStream fout = new FileOutputStream( resultFileName);
			out = new PrintWriter( fout );
	    	}
	    	catch ( Exception ex )
	    	{
			System.out.println("Exception while creating resultFile");
		}
		
		
	}

	

}
